@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using Station_Pro
@using StationPro
@inject IStringLocalizer<SharedResources> Localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var isRtl = currentCulture.StartsWith("ar");

    ViewData["Title"] = "Station Pro";
}
<!DOCTYPE html>
<html lang="@currentCulture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Gaming Store Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap');
        
        body { font-family: @(isRtl ? "'Cairo', sans-serif" : "'Inter', sans-serif"); }
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .feature-card { transition: all 0.3s ease; }
        .feature-card:hover { transform: translateY(-8px); box-shadow: 0 20px 40px rgba(0,0,0,0.15); }
        @@keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-20px); } }
        .float-animation { animation: float 3s ease-in-out infinite; }
        .btn { display: inline-flex; align-items: center; justify-content: center; padding: 0.75rem 1.5rem; border-radius: 0.5rem; font-weight: 600; transition: all 0.2s ease; text-decoration: none; }
        .btn-primary { background: #3b82f6; color: white; }
        .btn-primary:hover { background: #2563eb; }
        .btn-outline { border: 2px solid #3b82f6; color: #3b82f6; background: white; }
        .btn-outline:hover { background: #3b82f6; color: white; }
        .btn-secondary { background: #6b7280; color: white; }
        .btn-secondary:hover { background: #4b5563; }
        [dir="rtl"] .mr-2 { margin-right: 0; margin-left: 0.5rem; }
        [dir="rtl"] .mr-3 { margin-right: 0; margin-left: 0.75rem; }
        [dir="rtl"] .space-x-2 > * + * { margin-right: 0.5rem; margin-left: 0; }
        [dir="rtl"] .space-x-3 > * + * { margin-right: 0.75rem; margin-left: 0; }
        [dir="rtl"] .space-x-4 > * + * { margin-right: 1rem; margin-left: 0; }
        .lang-dropdown { background: white; border-radius: 0.75rem; box-shadow: 0 10px 40px rgba(0,0,0,0.1); overflow: hidden; }
        .lang-option { padding: 0.75rem 1rem; display: flex; align-items: center; gap: 0.75rem; cursor: pointer; transition: all 0.2s ease; }
        .lang-option:hover { background: #f3f4f6; }
        .lang-option.active { background: #eff6ff; color: #3b82f6; }
    </style>
</head>
<body class="bg-gray-50">
    
    <!-- Navigation -->
    <nav class="bg-white shadow-sm fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2">
                    <i class="fas fa-gamepad text-blue-600 text-xl sm:text-2xl"></i>
                    <span class="text-lg sm:text-2xl font-bold text-gray-900">Station Pro</span>
                </div>
                <div class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2 sm:space-x-4">
                    
                    <!-- Language Switcher -->
                    <div class="relative" id="langDropdown">
                        <button class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-all" onclick="toggleLangDropdown()">
                            <i class="fas fa-globe"></i>
                            <span class="font-medium hidden sm:inline">@(currentCulture.StartsWith("ar") ? "عربي" : "EN")</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        
                        <div class="absolute @(isRtl ? "left-0" : "right-0") mt-2 w-48 lang-dropdown hidden" id="langMenu">
                            <form method="post" action="/Language/SetLanguage">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" name="culture" value="en-US"
                                        class="lang-option w-full text-@(isRtl ? "right" : "left") @(currentCulture == "en-US" ? "active" : "")">
                                    <span class="text-xl">🇺🇸</span>
                                    <span class="flex-1">English</span>
                                    @if (currentCulture == "en-US")
                                    {
                                        <i class="fas fa-check text-blue-600"></i>
                                    }
                                </button>
                                <button type="submit" name="culture" value="ar-EG"
                                        class="lang-option w-full text-@(isRtl ? "right" : "left") @(currentCulture.StartsWith("ar") ? "active" : "")">
                                    <span class="text-xl">🇪🇬</span>
                                    <span class="flex-1">العربية</span>
                                    @if (currentCulture.StartsWith("ar"))
                                    {
                                        <i class="fas fa-check text-blue-600"></i>
                                    }
                                </button>
                            </form>
                        </div>
                    </div>

                    <a href="/auth/login" class="text-gray-700 hover:text-blue-600 font-medium text-sm sm:text-base">@Localizer["Login"]</a>
                    <a href="/dashboard/index" class="btn btn-primary text-xs sm:text-base !px-3 !py-2 sm:!px-6 sm:!py-3">
                        <span class="hidden sm:inline">@Localizer["StartFreeTrial"]</span>
                        <span class="sm:hidden">@Localizer["TryFree"]</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="gradient-bg pt-24 sm:pt-32 pb-12 sm:pb-20 px-4">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
                <div class="text-white">
                    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6 leading-tight">
                        @Localizer["ManageYourGamingStore"]
                    </h1>
                    <p class="text-base sm:text-lg md:text-xl text-purple-100 mb-6 sm:mb-8">
                        @Localizer["HeroDescription"]
                    </p>
                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                        <a href="/dashboard/index" class="bg-white text-purple-600 px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-bold text-base sm:text-lg hover:bg-gray-100 transition-all inline-flex items-center justify-center">
