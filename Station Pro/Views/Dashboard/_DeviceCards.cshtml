@model IEnumerable<DeviceDto>

@foreach (var device in Model)
{
    <div class="device-card @(device.IsAvailable ? "available" : "in-use") fade-in">
        <!-- Device Header -->
        <div class="flex justify-between items-start mb-3">
            <div class="flex items-center space-x-3">
                <div class="@(device.IsAvailable ? "bg-green-100" : "bg-red-100") p-3 rounded-lg">
                    <i class="fab @(device.Type == DeviceType.PS5 || device.Type == DeviceType.PS4 ? "fa-playstation" : "fa-gamepad")
                              @(device.IsAvailable ? "text-green-600" : "text-red-600") text-xl"></i>
                </div>
                <div>
                    <h4 class="font-bold text-gray-900">@device.Name</h4>
                    <p class="text-sm text-gray-500">@device.TypeName</p>
                </div>
            </div>
            <span class="status-badge @(device.IsAvailable ? "status-available" : "status-in-use")">
                @device.StatusName
            </span>
        </div>

        <!-- Device Body -->
        <div class="border-t border-gray-100 pt-3 mt-3">
            @if (device.CurrentSession != null)
            {
                <!-- Active Session Info -->
                <div class="mb-3">
                    <p class="text-xs text-gray-500 mb-1">Current Session</p>
                    <div class="flex justify-between items-center">
                        <span class="text-sm font-medium text-gray-700">
                            @(string.IsNullOrEmpty(device.CurrentSession.CustomerName) ? "Guest" : device.CurrentSession.CustomerName)
                        </span>
                        <span class="text-sm font-bold text-green-600">
                            @device.CurrentSession.TotalCost.ToString("C")
                        </span>
                    </div>
                </div>
            }
            else
            {
                <!-- Rate Info -->
                <div class="flex justify-between items-center mb-3">
                    <span class="text-sm text-gray-600">Hourly Rate</span>
                    <span class="text-lg font-bold text-blue-600">@device.HourlyRate.ToString("C")</span>
                </div>
            }

            <!-- Action Button -->
            @if (device.IsAvailable)
            {
                <button hx-post="@Html.TenantUrl("Session", "QuickStart")?deviceId=@device.Id"
                        hx-target="#active-sessions-container"
                        class="btn btn-success w-full">
                    <i class="fas fa-play mr-2"></i>
                    Start Session
                </button>
            }
            else
            {
                <button class="btn btn-secondary w-full opacity-50 cursor-not-allowed" disabled>
                    <i class="fas fa-spinner fa-spin mr-2"></i>
                    In Use
                </button>
            }
        </div>
    </div>
}