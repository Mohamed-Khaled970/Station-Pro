@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using StationPro
@inject IStringLocalizer<SharedResources> Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var isRtl = currentCulture.StartsWith("ar");
}

<!DOCTYPE html>
<html lang="@currentCulture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Station Pro</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Global Styles -->
    <link rel="stylesheet" href="@(Url.Content("~/css/global.css"))">

    <!-- Page-specific CSS -->
    @RenderSection("Styles", required: false)

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap');
    </style>
</head>
<body class="bg-gray-50">

    <nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo & Store Name -->
                <div class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2">
                    <i class="fas fa-gamepad text-blue-600 text-xl"></i>
                    <span class="text-lg font-bold text-gray-900">Station Pro</span>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:flex items-center @(isRtl ? "space-x-reverse" : "") space-x-1">
                    <a href="@Html.TenantUrl("Dashboard", "Index")"
                       class="nav-link px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-all">
                        <i class="fas fa-chart-line @(isRtl ? "ml-2" : "mr-2")"></i>  @Localizer["Dashboard"]
                    </a>
                    <a href="@Html.TenantUrl("Device", "Index")"
                       class="nav-link px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-all">
                        <i class="fas fa-gamepad @(isRtl ? "ml-2" : "mr-2")"></i>  @Localizer["Devices"]
                    </a>
                    <a href="@Html.TenantUrl("Session", "Index")"
                       class="nav-link px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-all">
                        <i class="fas fa-clock @(isRtl ? "ml-2" : "mr-2")"></i>  @Localizer["Sessions"]
                    </a>
                    <a href="@Html.TenantUrl("Room", "Index")"
                       class="nav-link px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-all">
                        <i class="fas fa-door-open @(isRtl ? "ml-2" : "mr-2")"></i>  @Localizer["Rooms"]
                    </a>
                    <a href="@Html.TenantUrl("Report", "Index")"
                       class="nav-link px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-all">
                        <i class="fas fa-file-invoice-dollar @(isRtl ? "ml-2" : "mr-2")"></i>  @Localizer["Reports"]
                    </a>
                </div>

                <!-- User Menu -->
                <div class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-3">
                    <!-- Notifications -->
                    <button class="relative p-2 text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-bell text-xl"></i>
                        <span class="absolute top-0 @(isRtl ? "left-0" : "right-0") w-2 h-2 bg-red-500 rounded-full"></span>
                    </button>

                    <!-- Logout -->
                    <a href="/logout" class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2 px-4 py-2 text-gray-700 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="font-medium">@Localizer["Logout"]</span>
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <button class="md:hidden p-2 text-gray-600" onclick="toggleMobileMenu()">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
            <div class="px-4 py-3 space-y-1">
                <a href="@Html.TenantUrl("Dashboard", "Index")" class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50">
                    <i class="fas fa-chart-line @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Dashboard"]
                </a>
                <a href="@Html.TenantUrl("Device", "Index")" class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50">
                    <i class="fas fa-gamepad @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Devices"]
                </a>
                <a href="@Html.TenantUrl("Session", "Index")" class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50">
                    <i class="fas fa-clock @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Sessions"]
                </a>
                <a href="@Html.TenantUrl("Room", "Index")" class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50">
                    <i class="fas fa-door-open @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Rooms"]
                </a>
                <a href="@Html.TenantUrl("Report", "Index")" class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-50">
                    <i class="fas fa-file-invoice-dollar @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Reports"]
                </a>
                <a href="/logout" class="block px-4 py-2 rounded-lg text-red-600 hover:bg-red-50">
                    <i class="fas fa-sign-out-alt @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Logout"]
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Toast Notifications -->
    <div id="toast-container" class="fixed top-4 @(isRtl ? "left-4" : "right-4") z-50 space-y-2"></div>

    <!-- Global Scripts -->
    <script src="@(Url.Content("~/js/global.js"))"></script>

    <!-- Page-specific Scripts -->
    @RenderSection("Scripts", required: false)

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        function toggleLangDropdown() {
            const menu = document.getElementById('langMenu');
            menu.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (event) {
            const dropdown = document.getElementById('langDropdown');
            const menu = document.getElementById('langMenu');
            if (dropdown && menu && !dropdown.contains(event.target)) {
                menu.classList.add('hidden');
            }
        });
    </script>
</body>
</html>