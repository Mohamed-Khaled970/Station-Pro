@model IEnumerable<DeviceDto>
@using StationPro.Domain.Entities
@using Microsoft.Extensions.Localization
@using StationPro
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Devices"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/device.css">
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 fade-in">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    <i class="fas fa-gamepad text-blue-600 mr-2"></i>
                    @Localizer["MyDevices"]
                </h1>
                <p class="text-gray-600">@Localizer["ManageAllDevices"]</p>
            </div>
            <button onclick="openModal('add-device-modal')"
                    class="btn btn-primary mt-4 md:mt-0">
                <i class="fas fa-plus mr-2"></i>
                @Localizer["AddDevice"]
            </button>
        </div>

        <!-- Stats Row -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 fade-in">
            <div class="card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">@Localizer["TotalDevices"]</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-gamepad text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">@Localizer["Available"]</p>
                        <p class="text-2xl font-bold text-green-600">@Model.Count(d => d.Status == "Available")</p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">@Localizer["InUse"]</p>
                        <p class="text-2xl font-bold text-red-600">@Model.Count(d => d.Status == "In Use")</p>
                    </div>
                    <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-play-circle text-red-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">@Localizer["MultiSessionDevices"]</p>
                        <p class="text-2xl font-bold text-purple-600">@Model.Count(d => d.SupportsMultiSession)</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-users text-purple-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters & Search -->
        <div class="card p-6 mb-8 fade-in">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
                <!-- Search -->
                <div class="flex-1 max-w-md">
                    <div class="relative">
                        <input type="text"
                               id="search-input"
                               placeholder="@Localizer["SearchDevices"]"
                               class="form-input pl-10"
                               onkeyup="filterDevices()">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                </div>

                <!-- Filter Buttons -->
                <div class="flex items-center space-x-2">
                    <button onclick="filterByStatus('all')"
                            class="filter-btn active"
                            data-filter="all">
                        @Localizer["All"]
                    </button>
                    <button onclick="filterByStatus('available')"
                            class="filter-btn"
                            data-filter="available">
                        @Localizer["Available"]
                    </button>
                    <button onclick="filterByStatus('in-use')"
                            class="filter-btn"
                            data-filter="in-use">
                        @Localizer["InUse"]
                    </button>
                    <button onclick="filterByStatus('multi-session')"
                            class="filter-btn"
                            data-filter="multi-session">
                        <i class="fas fa-users mr-1"></i>
                        @Localizer["Multi-Session"]
                    </button>
                </div>
            </div>
        </div>

        <!-- Devices Grid -->
        <div id="devices-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var device in Model)
            {
                <partial name="_DeviceCard" model="device" />
            }
        </div>

        @if (!Model.Any())
        {
            <div class="card p-12 text-center">
                <i class="fas fa-gamepad text-gray-300 text-6xl mb-4"></i>
                <h3 class="text-xl font-bold text-gray-900 mb-2">@Localizer["NoDevicesYet"]</h3>
                <p class="text-gray-600 mb-6">@Localizer["AddFirstDevice"]</p>
                <button onclick="openModal('add-device-modal')" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    @Localizer["AddFirstDeviceButton"]
                </button>
            </div>
        }
    </div>
</div>

<!-- Add Device Modal -->
<div id="add-device-modal" class="modal-overlay hidden">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="text-xl font-bold text-gray-900">@Localizer["AddNewDevice"]</h3>
        </div>
        <form id="add-device-form" hx-post="@Html.TenantUrl("Device", "Create")"
              hx-target="#devices-grid"
              hx-swap="afterbegin"
              hx-on::after-request="handleDeviceAdded()">
            <div class="modal-body space-y-4">
                <div>
                    <label class="form-label">
                        <i class="fas fa-tag text-blue-600 mr-2"></i>
                        @Localizer["DeviceName"]
                    </label>
                    <input type="text"
                           name="Name"
                           class="form-input"
                           placeholder="@Localizer["DeviceNamePlaceholder"]"
                           required>
                </div>

                <div>
                    <label class="form-label">
                        <i class="fas fa-gamepad text-blue-600 mr-2"></i>
                        @Localizer["DeviceType"]
                    </label>
                    <select name="Type" id="device-type-select" class="form-input" required onchange="toggleMultiSessionFields()">
                        <option value="">@Localizer["ChooseDeviceType"]</option>
                        <option value="1">@Localizer["PlayStation5"]</option>
                        <option value="2">@Localizer["PlayStation4"]</option>
                        <option value="3">@Localizer["PlayStation3"]</option>
                        <option value="4">@Localizer["XboxDevice"]</option>
                        <option value="5">@Localizer["PCGaming"]</option>
                        <option value="6">@Localizer["PingPongTable"]</option>
                        <option value="7">@Localizer["PoolTable"]</option>
                        <option value="8">@Localizer["BilliardsTable"]</option>
                        <option value="99">@Localizer["OtherDevice"]</option>
                    </select>
                </div>

                <!-- Single Session Rate -->
                <div>
                    <label class="form-label">
                        <i class="fas fa-user text-blue-600 mr-2"></i>
                        @Localizer["SingleSessionRate"]
                    </label>
                    <div class="relative">
                        <input type="number"
                               name="SingleSessionRate"
                               class="form-input"
                               placeholder="@Localizer["RatePlaceholder"]"
                               step="0.01"
                               min="0"
                               required>
                        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">
                            @Localizer["EGPPerHour"]
                        </span>
                    </div>
                </div>

                <!-- Multi Session Toggle & Rate -->
                <div id="multi-session-container" class="hidden">
                    <div class="flex items-center space-x-3 mb-3 p-3 bg-purple-50 rounded-lg border-2 border-purple-200">

                        <!-- Checkbox with value="true" to properly bind to boolean -->
                        <input type="checkbox"
                               id="supports-multi-session"
                               name="SupportsMultiSession"
                               value="true"
                               class="w-5 h-5 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
                        <label for="supports-multi-session" class="text-sm font-semibold text-gray-900 flex items-center">
                            <i class="fas fa-users text-purple-600 mr-2"></i>
                            @Localizer["EnableMultiSession"]
                        </label>
                    </div>

                    <div id="multi-rate-field" class="hidden">
                        <label class="form-label">
                            <i class="fas fa-users text-purple-600 mr-2"></i>
                            @Localizer["MultiSessionRate"]
                        </label>
                        <div class="relative">
                            <input type="number"
                                   name="MultiSessionRate"
                                   id="multi-session-rate-input"
                                   class="form-input"
                                   placeholder=80
                                   step="0.01"
                                   min="0">
                            <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">
                                @Localizer["EGPPerHour"]
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        onclick="closeModal('add-device-modal')"
                        class="btn btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    @Localizer["Cancel"]
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    @Localizer["AddDeviceButton"]
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Edit Device Modal -->
<div id="edit-device-modal" class="modal-overlay hidden">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="text-xl font-bold text-gray-900">@Localizer["EditDevice"]</h3>
        </div>
        <form id="edit-device-form">
            <input type="hidden" id="edit-device-id" name="Id">
            <div class="modal-body space-y-4">
                <div>
                    <label class="form-label">@Localizer["DeviceName"]</label>
                    <input type="text"
                           id="edit-device-name"
                           name="Name"
                           class="form-input"
                           required>
                </div>

                <!-- Single Session Rate -->
                <div>
                    <label class="form-label">
                        <i class="fas fa-user text-blue-600 mr-2"></i>
                        @Localizer["SingleSessionRate"]
                    </label>
                    <input type="number"
                           id="edit-single-rate"
                           name="SingleSessionRate"
                           class="form-input"
                           step="0.01"
                           min="0"
                           required>
                </div>

                <!-- Multi Session Toggle & Rate -->
                <div class="flex items-center space-x-3 mb-3 p-3 bg-purple-50 rounded-lg border-2 border-purple-200">
                    <input type="checkbox"
                           id="edit-supports-multi"
                           name="SupportsMultiSession"
                           class="w-5 h-5 text-purple-600 border-gray-300 rounded"
                           onchange="toggleEditMultiRate()">
                    <label for="edit-supports-multi" class="text-sm font-semibold text-gray-900 flex items-center">
                        <i class="fas fa-users text-purple-600 mr-2"></i>
                        @Localizer["EnableMultiSession"]
                    </label>
                </div>

                <div id="edit-multi-rate-field" class="hidden">
                    <label class="form-label">
                        <i class="fas fa-users text-purple-600 mr-2"></i>
                        @Localizer["MultiSessionRate"]
                    </label>
                    <input type="number"
                           id="edit-multi-rate"
                           name="MultiSessionRate"
                           class="form-input"
                           step="0.01"
                           min="0">
                </div>

                <div>
                    <label class="form-label">@Localizer["Status"]</label>
                    <select id="edit-device-status" name="Status" class="form-input" required>
                        <option value="1">@Localizer["Available"]</option>
                        <option value="2">@Localizer["InUse"]</option>
                        <option value="3">@Localizer["Maintenance"]</option>
                        <option value="4">@Localizer["Offline"]</option>
                    </select>
                </div>

                <div class="flex items-center space-x-2">
                    <input type="checkbox"
                           id="edit-device-active"
                           name="IsActive"
                           class="w-4 h-4 text-blue-600 border-gray-300 rounded">
                    <label for="edit-device-active" class="text-sm text-gray-700">
                        @Localizer["DeviceIsActive"]
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        onclick="closeModal('edit-device-modal')"
                        class="btn btn-secondary">
                    @Localizer["Cancel"]
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save mr-2"></i>
                    @Localizer["SaveChanges"]
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-device-modal" class="modal-overlay hidden">
    <div class="modal-content delete-modal-content">
        <div class="delete-modal-icon">
            <div class="delete-icon-circle">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
        </div>

        <div class="modal-header">
            <h3 class="text-2xl font-bold text-gray-900">@Localizer["AreYouSure"]</h3>
        </div>

        <div class="modal-body">
            <p class="text-gray-600 text-center mb-4">
                @Localizer["DeleteConfirm"] "<strong id="delete-device-name" class="text-gray-900"></strong>"?
            </p>
            <div class="bg-red-50 border-2 border-red-200 rounded-lg p-4 flex items-start space-x-3">
                <i class="fas fa-info-circle text-red-500 mt-1"></i>
                <p class="text-sm text-red-700">
                    @Localizer["DeleteDeviceWarning"]
                </p>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button"
                    onclick="closeDeleteModal()"
                    class="btn btn-secondary">
                <i class="fas fa-times mr-2"></i>
                @Localizer["CancelDelete"]
            </button>
            <button type="button"
                    id="confirm-delete-btn"
                    onclick="confirmDeleteDevice()"
                    class="btn btn-danger">
                <i class="fas fa-trash-alt mr-2"></i>
                @Localizer["ConfirmDelete"]
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Hidden inputs for localized JavaScript messages -->
    <input type="hidden" id="device-added-title" value="@Localizer["DeviceAddedSuccessTitle"]" />
    <input type="hidden" id="device-added-message" value="@Localizer["DeviceAddedSuccessMessage"]" />
    <input type="hidden" id="device-updated-title" value="@Localizer["DeviceUpdatedTitle"]" />
    <input type="hidden" id="device-updated-message" value="@Localizer["DeviceUpdatedMessage"]" />
    <input type="hidden" id="device-deleted-success" value="@Localizer["DeviceDeletedSuccess"]" />
    <input type="hidden" id="awesome-text" value="@Localizer["Awesome"]" />
    <input type="hidden" id="no-results-text" value="@Localizer["NoDevicesFound"]" />
    <input type="hidden" id="adjust-filters-text" value="@Localizer["AdjustFilters"]" />
    <input type="hidden" id="delete-warning" value="@Localizer["DeleteWarning"]" />
    <input type="hidden" id="delete-confirm" value="@Localizer["DeleteConfirm"]" />
    <input type="hidden" id="delete-undone" value="@Localizer["DeleteUndone"]" />
    <input type="hidden" id="failed-load-device" value="@Localizer["FailedLoadDevice"]" />
    <input type="hidden" id="failed-update-device" value="@Localizer["FailedUpdateDevice"]" />
    <input type="hidden" id="failed-delete-device" value="@Localizer["FailedDeleteDevice"]" />
    <input type="hidden" id="error-updating" value="@Localizer["ErrorUpdating"]" />
    <input type="hidden" id="error-deleting" value="@Localizer["ErrorDeleting"]" />
    <input type="hidden" id="single-player-text" value="@Localizer["SinglePlayer"]" />
    <input type="hidden" id="multi-player-text" value="@Localizer["MultiPlayer"]" />
    <input type="hidden" id="start-session-text" value="@Localizer["StartSession"]" />
    <input type="hidden" id="on-text" value="@Localizer["On"]" />

    <script src="~/js/session-timer.js"></script>
    <script src="~/js/device.js"></script>
}