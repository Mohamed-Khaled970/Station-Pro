@model List<PendingSubscriptionDto>
@using StationPro.Application.DTOs.Subscriptions
@{
    ViewData["Title"] = "Pending Subscriptions";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/css/pending-subscriptions.css">
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
                    💳 Subscription Management
                </h1>
                <p class="text-gray-600">Review and approve subscription payment proofs</p>
            </div>
            <a href="/Admin/Index" class="btn btn-outline">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Dashboard
            </a>
        </div>

        <!-- Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="card p-6">
                <div class="flex items-center justify-between mb-2">
                    <div class="p-3 bg-yellow-100 rounded-xl">
                        <i class="fas fa-clock text-yellow-600 text-2xl"></i>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-gray-900">@Model.Count(x => x.Status == "Pending")</h3>
                <p class="text-sm text-gray-600">Pending Review</p>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between mb-2">
                    <div class="p-3 bg-green-100 rounded-xl">
                        <i class="fas fa-check-circle text-green-600 text-2xl"></i>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-gray-900">@Model.Count(x => x.Status == "Approved")</h3>
                <p class="text-sm text-gray-600">Approved Today</p>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between mb-2">
                    <div class="p-3 bg-red-100 rounded-xl">
                        <i class="fas fa-times-circle text-red-600 text-2xl"></i>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-gray-900">@Model.Count(x => x.Status == "Rejected")</h3>
                <p class="text-sm text-gray-600">Rejected</p>
            </div>

            <div class="card p-6">
                <div class="flex items-center justify-between mb-2">
                    <div class="p-3 bg-blue-100 rounded-xl">
                        <i class="fas fa-dollar-sign text-blue-600 text-2xl"></i>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-gray-900">@Model.Sum(x => x.Amount).ToString("N0")</h3>
                <p class="text-sm text-gray-600">Total Pending (EGP)</p>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="card p-4 mb-6">
            <div class="flex gap-2">
                <button onclick="filterStatus('all')" class="filter-btn active px-4 py-2 rounded-lg font-semibold text-sm transition-all" data-status="all">
                    All (@Model.Count)
                </button>
                <button onclick="filterStatus('Pending')" class="filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all" data-status="Pending">
                    Pending (@Model.Count(x => x.Status == "Pending"))
                </button>
                <button onclick="filterStatus('Approved')" class="filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all" data-status="Approved">
                    Approved (@Model.Count(x => x.Status == "Approved"))
                </button>
                <button onclick="filterStatus('Rejected')" class="filter-btn px-4 py-2 rounded-lg font-semibold text-sm transition-all" data-status="Rejected">
                    Rejected (@Model.Count(x => x.Status == "Rejected"))
                </button>
            </div>
        </div>

        <!-- Subscriptions List -->
        <div class="space-y-4">
            @foreach (var subscription in Model.OrderByDescending(x => x.SubmittedDate))
            {
                var statusClass = subscription.Status switch
                {
                    "Pending" => "status-pending",
                    "Approved" => "status-approved",
                    "Rejected" => "status-rejected",
                    _ => "status-pending"
                };

                var borderColor = subscription.Status switch
                {
                    "Pending" => "border-yellow-300",
                    "Approved" => "border-green-300",
                    "Rejected" => "border-red-300",
                    _ => "border-gray-200"
                };

                <div class="subscription-item card p-6 border-l-4 @borderColor" data-status="@subscription.Status">
                    <div class="flex flex-col lg:flex-row gap-6">

                        <!-- Left Side: Info -->
                        <div class="flex-1">
                            <div class="flex items-start justify-between mb-4">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-1">@subscription.TenantName</h3>
                                    <div class="flex items-center gap-4 text-sm text-gray-600">
                                        <span>
                                            <i class="fas fa-envelope mr-1"></i>
                                            @subscription.TenantEmail
                                        </span>
                                        <span>
                                            <i class="fas fa-link mr-1"></i>
                                            @subscription.Subdomain
                                        </span>
                                    </div>
                                </div>
                                <span class="@statusClass">
                                    @if (subscription.Status == "Pending")
                                    {
                                        <i class="fas fa-clock"></i>
                                    }
                                    else if (subscription.Status == "Approved")
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle"></i>
                                    }
                                    @subscription.Status
                                </span>
                            </div>

                            <!-- Subscription Details -->
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4 p-4 bg-gray-50 rounded-lg">
                                <div>
                                    <p class="text-xs text-gray-500 mb-1">Plan</p>
                                    <p class="font-bold text-gray-900">@subscription.SubscriptionPlan</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 mb-1">Amount</p>
                                    <p class="font-bold text-green-600">@subscription.Amount.ToString("N0") EGP</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 mb-1">Payment Method</p>
                                    <p class="font-bold text-gray-900">@subscription.PaymentMethod</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 mb-1">Submitted</p>
                                    <p class="font-bold text-gray-900">@subscription.SubmittedDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>

                            <!-- Contact Info -->
                            <div class="grid grid-cols-2 gap-4 mb-4">
                                <div class="flex items-center gap-2 text-sm">
                                    <i class="fas fa-phone text-blue-600"></i>
                                    <span class="font-semibold text-gray-700">Phone:</span>
                                    <span class="text-gray-600">@subscription.PhoneNumber</span>
                                </div>
                                @if (!string.IsNullOrEmpty(subscription.TransactionReference))
                                {
                                    <div class="flex items-center gap-2 text-sm">
                                        <i class="fas fa-hashtag text-purple-600"></i>
                                        <span class="font-semibold text-gray-700">Ref:</span>
                                        <span class="text-gray-600">@subscription.TransactionReference</span>
                                    </div>
                                }
                            </div>

                            <!-- Notes -->
                            @if (!string.IsNullOrEmpty(subscription.Notes))
                            {
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mb-4">
                                    <p class="text-xs text-blue-700 font-semibold mb-1">
                                        <i class="fas fa-sticky-note mr-1"></i>
                                        Notes from customer:
                                    </p>
                                    <p class="text-sm text-blue-900">@subscription.Notes</p>
                                </div>
                            }

                            <!-- Admin Notes (if rejected) -->
                            @if (!string.IsNullOrEmpty(subscription.AdminNotes))
                            {
                                <div class="bg-red-50 border border-red-200 rounded-lg p-3">
                                    <p class="text-xs text-red-700 font-semibold mb-1">
                                        <i class="fas fa-user-shield mr-1"></i>
                                        Admin Notes:
                                    </p>
                                    <p class="text-sm text-red-900">@subscription.AdminNotes</p>
                                    <p class="text-xs text-red-600 mt-2">
                                        Reviewed by @subscription.ReviewedBy on @subscription.ReviewedDate?.ToString("MMM dd, yyyy HH:mm")
                                    </p>
                                </div>
                            }
                        </div>

                        <!-- Right Side: Payment Proof & Actions -->
                        <div class="lg:w-80">
                            <div class="bg-gray-50 rounded-lg p-4 mb-4">
                                <p class="text-xs font-semibold text-gray-700 mb-2">Payment Proof:</p>
                                <img src="@subscription.PaymentProofUrl"
                                     alt="Payment Proof"
                                     class="w-full rounded-lg border cursor-pointer hover:opacity-90 transition-opacity"
                                     onclick="openProofModal('@subscription.PaymentProofUrl', '@subscription.TenantName')">
                                <button onclick="openProofModal('@subscription.PaymentProofUrl', '@subscription.TenantName')"
                                        class="w-full mt-2 text-blue-600 hover:text-blue-700 text-sm font-semibold">
                                    <i class="fas fa-expand mr-1"></i>
                                    View Full Size
                                </button>
                            </div>

                            @if (subscription.Status == "Pending")
                            {
                                <div class="space-y-2">
                                    <button onclick="showApproveModal(@subscription.Id, '@subscription.TenantName', '@subscription.SubscriptionPlan')"
                                            class="btn btn-success w-full">
                                        <i class="fas fa-check mr-2"></i>
                                        Approve Subscription
                                    </button>
                                    <button onclick="showRejectModal(@subscription.Id, '@subscription.TenantName')"
                                            class="btn btn-danger w-full">
                                        <i class="fas fa-times mr-2"></i>
                                        Reject
                                    </button>
                                </div>
                            }
                            else if (subscription.Status == "Approved")
                            {
                                <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
                                    <i class="fas fa-check-circle text-green-600 text-3xl mb-2"></i>
                                    <p class="text-sm font-semibold text-green-900">Approved</p>
                                    <p class="text-xs text-green-700">@subscription.ReviewedDate?.ToString("MMM dd, yyyy HH:mm")</p>
                                    <p class="text-xs text-green-600 mt-1">By: @subscription.ReviewedBy</p>
                                </div>
                            }
                            else if (subscription.Status == "Rejected")
                            {
                                <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
                                    <i class="fas fa-times-circle text-red-600 text-3xl mb-2"></i>
                                    <p class="text-sm font-semibold text-red-900">Rejected</p>
                                    <p class="text-xs text-red-700">@subscription.ReviewedDate?.ToString("MMM dd, yyyy HH:mm")</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="card p-12 text-center">
                    <i class="fas fa-inbox text-gray-300 text-6xl mb-4"></i>
                    <p class="text-gray-500 text-lg">No subscription requests found</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Payment Proof Modal -->
<div id="proofModal" class="proof-modal">
    <span class="close-modal" onclick="closeProofModal()">&times;</span>
    <div class="proof-modal-content">
        <img id="modalImage" src="" alt="Payment Proof">
        <div class="bg-white p-4 rounded-lg mt-4">
            <h3 id="modalTitle" class="font-bold text-gray-900"></h3>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div id="approveModal" class="proof-modal">
    <div class="proof-modal-content max-w-md">
        <div class="bg-white rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-check-circle text-green-600 mr-2"></i>
                Approve Subscription
            </h3>
            <p class="text-gray-600 mb-4">
                Are you sure you want to approve the subscription for <strong id="approveTenantName"></strong>?
            </p>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
                <p class="text-sm text-blue-900">
                    <i class="fas fa-info-circle mr-1"></i>
                    This will activate their <strong id="approvePlan"></strong> plan immediately.
                </p>
            </div>
            <div class="flex gap-3">
                <button onclick="closeApproveModal()" class="btn btn-outline flex-1">Cancel</button>
                <button onclick="approveSubscription()" class="btn btn-success flex-1">
                    <i class="fas fa-check mr-2"></i>
                    Confirm Approval
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div id="rejectModal" class="proof-modal">
    <div class="proof-modal-content max-w-md">
        <div class="bg-white rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-times-circle text-red-600 mr-2"></i>
                Reject Subscription
            </h3>
            <p class="text-gray-600 mb-4">
                Please provide a reason for rejecting <strong id="rejectTenantName"></strong>'s subscription:
            </p>
            <textarea id="rejectReason"
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg mb-4"
                      rows="4"
                      placeholder="e.g., Payment proof is unclear, amount doesn't match, etc."></textarea>
            <div class="flex gap-3">
                <button onclick="closeRejectModal()" class="btn btn-outline flex-1">Cancel</button>
                <button onclick="rejectSubscription()" class="btn btn-danger flex-1">
                    <i class="fas fa-times mr-2"></i>
                    Confirm Rejection
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js"></script>
    <script src="~/js/pending-subscriptions.js"></script>
}