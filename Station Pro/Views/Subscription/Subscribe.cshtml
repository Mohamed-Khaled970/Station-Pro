@model SubscriptionViewModel
@using StationPro.Application.DTOs.Subscriptions
@{
    ViewData["Title"] = "Subscribe to Station Pro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>🎮</text></svg>">
    <link rel="alternate icon" href="data:image/png;base64,">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/subscribe.css">
</head>
<body class="bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">

    <!-- Header with Logo and Back Button -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <a href="/" class="flex items-center space-x-2 hover:opacity-80 transition-opacity">
                    <i class="fas fa-gamepad text-blue-600 text-2xl sm:text-3xl"></i>
                    <span class="text-xl sm:text-2xl font-bold text-gray-900">Station Pro</span>
                </a>

                <!-- Back to Home Button -->
                <a href="/" class="btn-outline px-4 py-2 sm:px-6 sm:py-2 rounded-lg font-semibold text-sm sm:text-base flex items-center gap-2">
                    <i class="fas fa-home"></i>
                    <span class="hidden sm:inline">Back to Home</span>
                    <span class="sm:hidden">Home</span>
                </a>
            </div>
        </div>
    </header>

    <div class="py-6 sm:py-8 px-4">
        <div class="max-w-6xl mx-auto">

            <!-- Header -->
            <div class="text-center mb-6 sm:mb-8">
                <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-2">
                    🎮 Choose Your Plan
                </h1>
                <p class="text-sm sm:text-base text-gray-600">Welcome @Model.TenantName! Select a subscription plan to get started</p>
            </div>

            <!-- Show pending subscription notice if exists -->
            @if (Model.HasPendingSubscription)
            {
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3 sm:p-4 mb-4 sm:mb-6 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-clock text-yellow-400 text-lg sm:text-xl"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-xs sm:text-sm font-medium text-yellow-800">
                                Subscription Pending Review
                            </h3>
                            <div class="mt-1 sm:mt-2 text-xs sm:text-sm text-yellow-700">
                                <p>You have a subscription request pending admin approval. You can continue using the free tier until your request is processed.</p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Subscription Flow Steps -->
            <div class="mb-6 sm:mb-8 overflow-x-auto">
                <div class="flex items-center justify-center gap-2 sm:gap-4 min-w-max px-4">
                    <div class="flex items-center">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm sm:text-base" id="step-1">1</div>
                        <span class="ml-1 sm:ml-2 font-semibold text-gray-900 text-xs sm:text-base" id="step-1-text">Choose Plan</span>
                    </div>
                    <div class="w-8 sm:w-16 h-1 bg-gray-300"></div>
                    <div class="flex items-center">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gray-300 text-white rounded-full flex items-center justify-center font-bold text-sm sm:text-base" id="step-2">2</div>
                        <span class="ml-1 sm:ml-2 font-semibold text-gray-500 text-xs sm:text-base" id="step-2-text">Payment Info</span>
                    </div>
                    <div class="w-8 sm:w-16 h-1 bg-gray-300"></div>
                    <div class="flex items-center">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gray-300 text-white rounded-full flex items-center justify-center font-bold text-sm sm:text-base" id="step-3">3</div>
                        <span class="ml-1 sm:ml-2 font-semibold text-gray-500 text-xs sm:text-base whitespace-nowrap" id="step-3-text">Upload Proof</span>
                    </div>
                </div>
            </div>

            <!-- STEP 1: Plans Selection -->
            <div id="plans-section">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">

                    <!-- Basic Plan -->
                    <div class="plan-card card p-4 sm:p-6 border-2 border-gray-200" onclick="selectPlan('Basic', 29, this)">
                        <div class="text-center mb-3 sm:mb-4">
                            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-2 sm:mb-3">
                                <i class="fas fa-star text-blue-600 text-xl sm:text-2xl"></i>
                            </div>
                            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Basic</h3>
                            <p class="text-gray-600 text-xs sm:text-sm">Perfect for small stores</p>
                        </div>
                        <div class="text-center mb-4 sm:mb-6">
                            <span class="text-3xl sm:text-4xl font-bold text-gray-900">29</span>
                            <span class="text-gray-600 text-sm sm:text-base"> EGP/month</span>
                        </div>
                        <ul class="space-y-2 sm:space-y-3 mb-4 sm:mb-6">
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Up to 10 devices
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Basic reports
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Email support
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Session tracking
                            </li>
                        </ul>
                    </div>

                    <!-- Pro Plan -->
                    <div class="plan-card card p-4 sm:p-6 border-2 border-purple-300 relative" onclick="selectPlan('Pro', 79, this)">
                        <div class="absolute -top-2 sm:-top-3 left-1/2 transform -translate-x-1/2">
                            <span class="bg-purple-600 text-white px-3 py-1 rounded-full text-xs font-bold">POPULAR</span>
                        </div>
                        <div class="text-center mb-3 sm:mb-4">
                            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-2 sm:mb-3">
                                <i class="fas fa-gem text-purple-600 text-xl sm:text-2xl"></i>
                            </div>
                            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Pro</h3>
                            <p class="text-gray-600 text-xs sm:text-sm">For growing businesses</p>
                        </div>
                        <div class="text-center mb-4 sm:mb-6">
                            <span class="text-3xl sm:text-4xl font-bold text-gray-900">79</span>
                            <span class="text-gray-600 text-sm sm:text-base"> EGP/month</span>
                        </div>
                        <ul class="space-y-2 sm:space-y-3 mb-4 sm:mb-6">
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Up to 50 devices
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Advanced analytics
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Priority support
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Custom branding
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Revenue forecasting
                            </li>
                        </ul>
                    </div>

                    <!-- Enterprise Plan -->
                    <div class="plan-card card p-4 sm:p-6 border-2 border-gray-200" onclick="selectPlan('Enterprise', 199, this)">
                        <div class="text-center mb-3 sm:mb-4">
                            <div class="w-12 h-12 sm:w-16 sm:h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-2 sm:mb-3">
                                <i class="fas fa-crown text-orange-600 text-xl sm:text-2xl"></i>
                            </div>
                            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Enterprise</h3>
                            <p class="text-gray-600 text-xs sm:text-sm">For large operations</p>
                        </div>
                        <div class="text-center mb-4 sm:mb-6">
                            <span class="text-3xl sm:text-4xl font-bold text-gray-900">199</span>
                            <span class="text-gray-600 text-sm sm:text-base"> EGP/month</span>
                        </div>
                        <ul class="space-y-2 sm:space-y-3 mb-4 sm:mb-6">
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Unlimited devices
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                All Pro features
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Dedicated support
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Custom integrations
                            </li>
                            <li class="flex items-center text-xs sm:text-sm">
                                <i class="fas fa-check text-green-600 mr-2"></i>
                                Multi-location support
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Skip Option -->
                <div class="text-center">
                    <p class="text-sm sm:text-base text-gray-600 mb-2 sm:mb-3">Not ready to subscribe?</p>
                    <a href="/Dashboard/Index" class="text-blue-600 hover:text-blue-700 font-semibold text-sm sm:text-base">
                        <i class="fas fa-arrow-right mr-2"></i>
                        Continue with Free Plan
                    </a>
                </div>
            </div>

            <!-- STEP 2: Payment Information -->
            <div id="payment-section" class="hidden">
                <form id="paymentForm">
                    <input type="hidden" id="selectedPlan" name="SubscriptionPlan" />
                    <input type="hidden" id="amount" name="Amount" />

                    <div class="card p-4 sm:p-6 md:p-8 mb-4 sm:mb-6">
                        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">
                            <i class="fas fa-credit-card text-blue-600 mr-2"></i>
                            Payment Information
                        </h2>

                        <!-- Payment Instructions -->
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 sm:p-6 mb-4 sm:mb-6">
                            <h3 class="font-bold text-blue-900 mb-2 sm:mb-3 flex items-center text-sm sm:text-base">
                                <i class="fas fa-info-circle mr-2"></i>
                                Payment Instructions
                            </h3>
                            <ol class="space-y-2 text-xs sm:text-sm text-blue-800">
                                <li class="flex">
                                    <span class="font-bold mr-2">1.</span>
                                    <span>Transfer <strong id="display-amount"></strong> EGP to one of the numbers below</span>
                                </li>
                                <li class="flex">
                                    <span class="font-bold mr-2">2.</span>
                                    <span>Take a screenshot of the successful transaction</span>
                                </li>
                                <li class="flex">
                                    <span class="font-bold mr-2">3.</span>
                                    <span>Click "Next" to upload your payment proof</span>
                                </li>
                            </ol>
                        </div>

                        <!-- Payment Methods -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 mb-4 sm:mb-6">
                            <div class="bg-gradient-to-br from-red-500 to-red-600 text-white p-4 sm:p-6 rounded-lg">
                                <div class="flex items-center mb-2 sm:mb-3">
                                    <i class="fas fa-mobile-alt text-2xl sm:text-3xl mr-2 sm:mr-3"></i>
                                    <div>
                                        <p class="font-bold text-base sm:text-lg">Vodafone Cash</p>
                                        <p class="text-xs sm:text-sm opacity-90">Instant Transfer</p>
                                    </div>
                                </div>
                                <div class="bg-white/20 rounded p-2 sm:p-3 text-center">
                                    <p class="text-xs opacity-80 mb-1">Transfer to:</p>
                                    <p class="text-lg sm:text-2xl font-bold tracking-wide">01099429789</p>
                                    <p class="text-xs opacity-75 mt-1">Name: Station Pro</p>
                                </div>
                            </div>

                            <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-4 sm:p-6 rounded-lg">
                                <div class="flex items-center mb-2 sm:mb-3">
                                    <i class="fas fa-university text-2xl sm:text-3xl mr-2 sm:mr-3"></i>
                                    <div>
                                        <p class="font-bold text-base sm:text-lg">InstaPay</p>
                                        <p class="text-xs sm:text-sm opacity-90">Bank Transfer</p>
                                    </div>
                                </div>
                                <div class="bg-white/20 rounded p-2 sm:p-3 text-center">
                                    <p class="text-xs opacity-80 mb-1">Transfer to:</p>
                                    <p class="text-lg sm:text-2xl font-bold tracking-wide">01099429789</p>
                                    <p class="text-xs opacity-75 mt-1">Name: Station Pro</p>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method Selection -->
                        <div class="mb-4 sm:mb-6">
                            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">
                                Payment Method Used <span class="text-red-500">*</span>
                            </label>
                            <select name="PaymentMethod" id="paymentMethod" required
                                    class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base">
                                <option value="">Select payment method</option>
                                <option value="VodafoneCash">Vodafone Cash</option>
                                <option value="InstaPay">InstaPay</option>
                            </select>
                        </div>

                        <!-- Transaction Details -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 mb-4 sm:mb-6">
                            <div>
                                <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">
                                    Your Phone Number <span class="text-red-500">*</span>
                                </label>
                                <input type="tel" name="PhoneNumber" id="phoneNumber" required
                                       placeholder="01XXXXXXXXX"
                                       class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base">
                            </div>
                            <div>
                                <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">
                                    Transaction Reference (optional)
                                </label>
                                <input type="text" name="TransactionReference" id="transactionRef"
                                       placeholder="Transaction ID"
                                       class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base">
                            </div>
                        </div>

                        <!-- Additional Notes -->
                        <div class="mb-4 sm:mb-6">
                            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">
                                Additional Notes (optional)
                            </label>
                            <textarea name="Notes" id="notes" rows="3"
                                      placeholder="Any additional information..."
                                      class="w-full px-3 py-2 sm:px-4 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base"></textarea>
                        </div>

                        <!-- Navigation Buttons -->
                        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                            <button type="button" onclick="backToPlans()" class="btn btn-outline flex-1 py-3 rounded-lg font-semibold text-sm sm:text-base">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Back to Plans
                            </button>
                            <button type="button" onclick="goToUploadProof()" class="btn btn-primary flex-1 py-3 rounded-lg font-semibold text-white text-sm sm:text-base">
                                Next: Upload Proof
                                <i class="fas fa-arrow-right ml-2"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- STEP 3: Upload Proof -->
            <div id="upload-section" class="hidden">
                <form asp-action="SubmitSubscription" asp-route-tenantId="@Model.TenantId" method="post" enctype="multipart/form-data" id="subscriptionForm">
                    @Html.AntiForgeryToken()

                    <!-- Hidden fields to carry data from previous steps -->
                    <input type="hidden" id="finalPlan" name="SubscriptionPlan" />
                    <input type="hidden" id="finalAmount" name="Amount" />
                    <input type="hidden" id="finalPaymentMethod" name="PaymentMethod" />
                    <input type="hidden" id="finalPhoneNumber" name="PhoneNumber" />
                    <input type="hidden" id="finalTransactionRef" name="TransactionReference" />
                    <input type="hidden" id="finalNotes" name="Notes" />

                    <div class="card p-4 sm:p-6 md:p-8 mb-4 sm:mb-6">
                        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">
                            <i class="fas fa-cloud-upload-alt text-blue-600 mr-2"></i>
                            Upload Payment Proof
                        </h2>

                        <!-- Upload Area -->
                        <div class="mb-4 sm:mb-6">
                            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">
                                Payment Screenshot <span class="text-red-500">*</span>
                            </label>
                            <div class="upload-area p-6 sm:p-8 rounded-lg text-center" id="uploadArea">
                                <i class="fas fa-cloud-upload-alt text-3xl sm:text-4xl text-gray-400 mb-2 sm:mb-3"></i>
                                <p class="text-sm sm:text-base text-gray-600 mb-1 sm:mb-2">Click to upload or drag and drop</p>
                                <p class="text-xs sm:text-sm text-gray-500">PNG, JPG up to 5MB</p>
                                <input type="file" name="PaymentProof" id="fileInput" accept="image/*" required class="hidden">
                            </div>
                            <div id="preview" class="mt-3 sm:mt-4 hidden">
                                <p class="text-xs sm:text-sm font-semibold text-gray-700 mb-2">Preview:</p>
                                <img id="previewImage" src="" alt="Preview" class="preview-image border rounded-lg">
                                <button type="button" onclick="removeImage()" class="mt-2 text-red-600 hover:text-red-700 text-xs sm:text-sm font-semibold">
                                    <i class="fas fa-times mr-1"></i> Remove
                                </button>
                            </div>
                        </div>

                        <!-- Navigation Buttons -->
                        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                            <button type="button" onclick="backToPayment()" class="btn btn-outline flex-1 py-3 rounded-lg font-semibold text-sm sm:text-base">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Back to Payment Info
                            </button>
                            <button type="submit" class="btn btn-primary flex-1 py-3 rounded-lg font-semibold text-white text-sm sm:text-base">
                                <i class="fas fa-check mr-2"></i>
                                Submit for Approval
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t mt-8 sm:mt-12 py-4 sm:py-6">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <p class="text-xs sm:text-sm text-gray-600">© 2026 Station Pro. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/subscribe.js"></script>

    @if (TempData["Success"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const message = '@TempData["Success"]';
                const parts = message.split('|');
                const title = parts[0] || '✅ Success!';
                const body = parts[1] || message;

                showFriendlyAlert(title, body, 'success');
            });
        </script>
    }

    @if (TempData["Error"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const message = '@TempData["Error"]';
                const parts = message.split('|');
                const title = parts[0] || '❌ Error';
                const body = parts[1] || message;

                showFriendlyAlert(title, body, 'error');
            });
        </script>
    }
</body>
</html>