@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using StationPro
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Login"];
    Layout = null;

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "en-US";
    var isRtl = currentCulture.StartsWith("ar");
}

<!DOCTYPE html>
<html lang="@currentCulture" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @Localizer["StationPro"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap');

        body {
            font-family: @(isRtl ? "'Cairo', sans-serif" : "'Inter', sans-serif");
        }
    </style>
</head>
<body class="gaming-bg min-h-screen py-12 px-4">
    <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">

            <!-- Left/Right Side - Branding & Features -->
            <div class="text-white space-y-8 fade-in @(isRtl ? "lg:order-2" : "")">
                <div>
                    <div class="inline-flex items-center justify-center w-20 h-20 icon-box rounded-3xl mb-6">
                        <i class="fas fa-gamepad text-white text-3xl"></i>
                    </div>
                    <h1 class="text-5xl font-bold mb-4 leading-tight">
                        @Localizer["WelcomeBack"]<br />@Localizer["StationPro"]
                    </h1>
                    <p class="text-xl text-white/90 leading-relaxed">
                        @Localizer["LoginDescription"]
                    </p>
                </div>

                <!-- Feature Cards -->
                <div class="space-y-4">
                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start @(isRtl ? "space-x-reverse" : "") space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-chart-bar text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">@Localizer["RealtimeDashboard"]</h3>
                                <p class="text-gray-600">@Localizer["RealtimeDashboardDesc"]</p>
                            </div>
                        </div>
                    </div>

                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start @(isRtl ? "space-x-reverse" : "") space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-mobile-alt text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">@Localizer["AccessAnywhere"]</h3>
                                <p class="text-gray-600">@Localizer["AccessAnywhereDesc"]</p>
                            </div>
                        </div>
                    </div>

                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start @(isRtl ? "space-x-reverse" : "") space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-users text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">@Localizer["CustomerManagement"]</h3>
                                <p class="text-gray-600">@Localizer["CustomerManagementDesc"]</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Trust Badges -->
                <div class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-8 pt-4">
                    <div class="text-center">
                        <div class="text-3xl font-bold">500+</div>
                        <div class="text-sm text-white/80">@Localizer["ActiveStores"]</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">4.9</div>
                        <div class="text-sm text-white/80">@Localizer["UserRating"]</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">24/7</div>
                        <div class="text-sm text-white/80">@Localizer["Support"]</div>
                    </div>
                </div>
            </div>

            <!-- Right/Left Side - Login Form -->
            <div class="slide-up @(isRtl ? "lg:order-1" : "")" style="animation-delay: 0.2s">
                <div class="glass-card rounded-3xl shadow-2xl p-10">
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["WelcomeBackTitle"]</h2>
                        <p class="text-gray-600">@Localizer["LoginSubtitle"]</p>
                    </div>

                    <form id="login-form" action="/login" method="POST" class="space-y-6">

                        <!-- Email -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-envelope text-indigo-600 @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["EmailAddress"]
                            </label>
                            <input type="email"
                                   name="Email"
                                   class="form-input w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                   placeholder="@Localizer["EmailPlaceholder"]"
                                   autocomplete="email"
                                   dir="ltr"
                                   required>
                        </div>

                        <!-- Password -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-lock text-indigo-600 @(isRtl ? "ml-2" : "mr-2")"></i>@Localizer["Password"]
                            </label>
                            <div class="relative">
                                <input type="password"
                                       name="Password"
                                       id="login-password"
                                       class="form-input w-full px-4 py-3.5 @(isRtl ? "pl-12" : "pr-12") border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                       placeholder="@Localizer["PasswordPlaceholder"]"
                                       autocomplete="current-password"
                                       dir="ltr"
                                       required>
                                <button type="button"
                                        onclick="togglePassword('login-password')"
                                        class="absolute @(isRtl ? "left-4" : "right-4") top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="flex items-center justify-between">
                            <label class="flex items-center @(isRtl ? "space-x-reverse" : "") space-x-2">
                                <input type="checkbox"
                                       name="RememberMe"
                                       class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                                <span class="text-sm text-gray-600">@Localizer["RememberMe"]</span>
                            </label>
                            <a href="/forgot-password" class="text-sm text-indigo-600 hover:text-indigo-700 font-semibold">
                                @Localizer["ForgotPassword"]
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn-primary w-full py-4 rounded-xl text-white font-semibold text-base shadow-lg">
                            <i class="fas fa-sign-in-alt @(isRtl ? "ml-2" : "mr-2")"></i>
                            @Localizer["LoginButton"]
                        </button>
                    </form>

                    <!-- Register Link -->
                    <div class="mt-8 text-center">
                        <p class="text-gray-600">
                            @Localizer["NoAccount"]
                            <a href="/auth/register" class="text-indigo-600 hover:text-indigo-700 font-semibold @(isRtl ? "mr-1" : "ml-1")">
                                @Localizer["CreateAccount"]
                            </a>
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/auth.js"></script>
</body>
</html>