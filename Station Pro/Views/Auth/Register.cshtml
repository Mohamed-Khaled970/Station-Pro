@{
    ViewData["Title"] = "Create Your Store";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Station Pro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body class="gaming-bg min-h-screen py-12 px-4">

    <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">

            <!-- Left Side - Branding & Features -->
            <div class="text-white space-y-8 fade-in">
                <div>
                    <div class="inline-flex items-center justify-center w-20 h-20 icon-box rounded-3xl mb-6">
                        <i class="fas fa-gamepad text-white text-3xl"></i>
                    </div>
                    <h1 class="text-5xl font-bold mb-4 leading-tight">
                        Launch Your<br />Gaming Empire
                    </h1>
                    <p class="text-xl text-white/90 leading-relaxed">
                        Create your professional gaming store in minutes. Manage inventory, track sales, and grow your business with Station Pro.
                    </p>
                </div>

                <!-- Feature Cards -->
                <div class="space-y-4">
                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-rocket text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">Quick Setup</h3>
                                <p class="text-gray-600">Get started in under 5 minutes with our intuitive setup wizard</p>
                            </div>
                        </div>
                    </div>

                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-shield-alt text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">Secure & Reliable</h3>
                                <p class="text-gray-600">Enterprise-grade security to protect your business data</p>
                            </div>
                        </div>
                    </div>

                    <div class="feature-card glass-card p-6 rounded-2xl">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-chart-line text-white text-xl"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-gray-900 font-semibold text-lg mb-1">Powerful Analytics</h3>
                                <p class="text-gray-600">Track sales, inventory, and customer insights in real-time</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Trust Badges -->
                <div class="flex items-center space-x-8 pt-4">
                    <div class="text-center">
                        <div class="text-3xl font-bold">14</div>
                        <div class="text-sm text-white/80">Days Free Trial</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">24/7</div>
                        <div class="text-sm text-white/80">Support</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold">100%</div>
                        <div class="text-sm text-white/80">Secure</div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Registration Form -->
            <div class="slide-up" style="animation-delay: 0.2s">
                <div class="glass-card rounded-3xl shadow-2xl p-10">
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 mb-2">Create Your Store</h2>
                        <p class="text-gray-600">Fill in your details to get started</p>
                    </div>

                    <form id="register-form" action="/register" method="POST" class="space-y-6">

                        <!-- Store Name -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-store text-indigo-600 mr-2"></i>Store Name
                            </label>
                            <input type="text"
                                   name="StoreName"
                                   class="form-input w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                   placeholder="Ahmed's Gaming Store"
                                   required>
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-envelope text-indigo-600 mr-2"></i>Email Address
                            </label>
                            <input type="email"
                                   name="Email"
                                   class="form-input w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                   placeholder="ahmed@example.com"
                                   required>
                        </div>

                        <!-- Phone -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-phone text-indigo-600 mr-2"></i>Phone Number
                            </label>
                            <input type="tel"
                                   name="PhoneNumber"
                                   class="form-input w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                   placeholder="01234567890"
                                   required>
                        </div>

                        <!-- Password -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-lock text-indigo-600 mr-2"></i>Password
                            </label>
                            <div class="relative">
                                <input type="password"
                                       name="Password"
                                       id="password"
                                       class="form-input w-full px-4 py-3.5 pr-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                       placeholder="••••••••"
                                       minlength="6"
                                       required>
                                <button type="button"
                                        onclick="togglePassword('password')"
                                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="fas fa-lock text-indigo-600 mr-2"></i>Confirm Password
                            </label>
                            <div class="relative">
                                <input type="password"
                                       name="ConfirmPassword"
                                       id="confirm-password"
                                       class="form-input w-full px-4 py-3.5 pr-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-gray-900"
                                       placeholder="••••••••"
                                       required>
                                <button type="button"
                                        onclick="togglePassword('confirm-password')"
                                        class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <p class="form-error hidden" id="password-match-error">Passwords don't match</p>
                        </div>

                        <!-- Terms -->
                        <div class="flex items-start space-x-3">
                            <input type="checkbox"
                                   id="terms"
                                   class="mt-1 w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500"
                                   required>
                            <label for="terms" class="text-sm text-gray-600 leading-relaxed">
                                I agree to the <a href="#" class="text-indigo-600 hover:underline font-medium">Terms & Conditions</a>
                                and <a href="#" class="text-indigo-600 hover:underline font-medium">Privacy Policy</a>
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn-primary w-full py-4 rounded-xl text-white font-semibold text-base shadow-lg">
                            <i class="fas fa-rocket mr-2"></i>
                            Create My Store
                        </button>
                    </form>

                    <!-- Login Link -->
                    <div class="mt-8 text-center">
                        <p class="text-gray-600">
                            Already have an account?
                            <a href="@Url.Action("Login", "Auth")" class="text-indigo-600 hover:text-indigo-700 font-semibold ml-1">
                                Login here
                            </a>
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/auth.js"></script>
</body>
</html>